<Window x:Class="Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500" Closing="Window_Closing">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top" Margin="20">
            <Button x:Name="Add" Content="Add" Margin="10 10" Width="60" Click="Add_Click"/>
            <Button x:Name="Create" Content="Create" Margin="10 10" Width="60"/>
            <Button x:Name="Update" Content="Update" Margin="10 10" Width="60"/>
        </StackPanel>
        
    </Grid>
</Window>
